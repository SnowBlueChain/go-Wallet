
###############################################################################
# Signature Wallet for generating key of only authorization account
#  and multisig address,
#  and signature for multisig addresses
###############################################################################
###############################################################################
# create hd key
###############################################################################
# create seed
.PHONY: create-seed-signwallet
create-seed-signwallet:
	sign create seed
	#seed: ulm+ljbfXgPMy0stCTCz4bJcFwfLLVAnQrW4AzwHemQ=

# create hdkey for acounts
.PHONY: create-hdkey-auth
create-hdkey-auth:
	sign create hdkey


###############################################################################
# import private key to sign wallet
###############################################################################
.PHONY: import-privkey-auth
import-privkey-auth:
	sign import privkey

###############################################################################
# import full public key generated by keygen wallet
#  for multisig account like receipt, payment
###############################################################################
#make filepath=./data/pubkey/receipt_1535613888391656000.csv import-pubkey-signwallet
.PHONY: import-pubkey-signwallet
import-pubkey-signwallet:
	sign import address -file ${filepath} -account receipt
	sign import address -file ${filepath} -account payment


###############################################################################
# add multisig address (call rpc `addmultisigaddress`)
###############################################################################
.PHONY: add-multisig
add-multisig:
	sign add multisig -account receipt
	sign add multisig -account payment


###############################################################################
# export multisig address as csv
###############################################################################
.PHONY: export-multisig
export-multisig:
	sign export multisig -account receipt
	sign export multisig -account payment
